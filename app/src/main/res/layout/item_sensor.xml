<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:minHeight="120dp">

        <!-- Elemento 1: Nombre del sensor -->
        <TextView
            android:id="@+id/tvSensorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Sensor"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Elemento 2: Tipo del sensor -->
        <TextView
            android:id="@+id/tvSensorType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Acelerómetro"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginBottom="3dp" />

        <!-- Elemento 3: Fabricante -->
        <TextView
            android:id="@+id/tvManufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fabricante: Google"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            android:layout_marginBottom="3dp" />

        <!-- Elemento 4: Versión -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versión: v1.0"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
